<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/sptr_sport_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/FirebaseUI.Text.T09"
        tools:text="Football" />

    <TextView
        android:id="@+id/sptr_created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sptr_sport_name"
        android:textAppearance="@style/FirebaseUI.Text.InputLabel"
        tools:text="Harris Nawrangy" />

    <TextView
        android:id="@+id/sptr_challenge_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sptr_created_by"
        android:textAppearance="@style/FirebaseUI.Text.InputLabel"
        tools:text="12/11/2021" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/color_button"
        android:text="@string/button_view"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        android:textAppearance="@style/FirebaseUI.Text.InputLabel"
        tools:ignore="RelativeOverlap" />
</RelativeLayout>