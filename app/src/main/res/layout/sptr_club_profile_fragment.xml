<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profilesfragments.ClubProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/sptr_club_profile_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/sptr_club_profile_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/sptr_arrow_back"/>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/sptr_progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:gravity="center"
        android:layout_below="@+id/sptr_club_profile_app_bar"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/sptr_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@+id/sptr_club_profile_app_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sptr_club_name"
                android:fontFamily="@font/hindsiliguribold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
            <TextView
                android:id="@+id/sptr_club_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Club's Full Name"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/hindsiligurilight"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
            <TextView
                android:id="@+id/sptr_is_club_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(Admin)"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/hindsiliguribold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sptr_date_created"
                android:fontFamily="@font/hindsiliguribold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
            <TextView
                android:id="@+id/sptr_club_date_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12/11/2021"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/hindsiligurilight"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sptr_clubs_location"
                android:fontFamily="@font/hindsiliguribold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
            <TextView
                android:id="@+id/sptr_club_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/hindsiligurilight"
                tools:text="Mumbai, Maharashtra, India. Mumbai 400051"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sptr_club_owner"
                android:fontFamily="@font/hindsiliguribold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
            <TextView
                android:id="@+id/sptr_club_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Club Owner Full Name"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/hindsiligurilight"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sptr_club_description"
                android:fontFamily="@font/hindsiliguribold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
            <TextView
                android:id="@+id/sptr_club_full_descritpion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Club Full Description"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/hindsiligurilight"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
        </LinearLayout>

        <Button
            android:id="@+id/sptr_button_view_club_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sptr_view_players"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/color_button"/>

        <Button
            android:id="@+id/sptr_button_view_club_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sptr_view_club_gallery"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/color_button"/>

        <Button
            android:id="@+id/sptr_button_delete_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Club"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/holo_red_light"/>
    </LinearLayout>
</RelativeLayout>