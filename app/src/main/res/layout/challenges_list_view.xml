<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingBottom="8dp"
    android:paddingStart="10dp"
    android:paddingEnd="20dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/FirebaseUI.Text.T09"
        tools:text="Club Name" />

    <TextView
        android:id="@+id/challenge_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/club_name"
        android:textAppearance="@style/FirebaseUI.Text.InputLabel"
        tools:text="12/01/2021" />

    <TextView
        android:id="@+id/sport_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/challenge_date"
        android:textAppearance="@style/FirebaseUI.Text.InputLabel"
        tools:text="Cricket" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/color_button"
        android:text="@string/button_view"
        android:layout_centerInParent="true"
        android:textAppearance="@style/FirebaseUI.Text.InputLabel"
        android:textAllCaps="false" />
</RelativeLayout>